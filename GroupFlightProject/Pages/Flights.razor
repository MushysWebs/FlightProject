@page "/flights"

<div class="container">

    <style>
        h2 {text-align: center;}
    </style>


    <h2>Flight Finder</h2>


    <EditForm Model="@flightSearchCriteria" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="flex-container">
 

            <div class="input-group">
                <label for="origin">From:</label>
                <InputText id="origin" @bind-Value="flightSearchCriteria.DepartureLocation" class="input-field" />
            </div>

            <div class="input-group">
                <label for="destination">To:</label>
                <InputText id="destination" @bind-Value="flightSearchCriteria.Destination" class="input-field" />
            </div>

            <div class="input-group">
                <label for="day">Day:</label>
                <InputText id="day" @bind-Value="flightSearchCriteria.Day" class="input-field" />
            </div>

            <button type="submit" class="btn">Find flights</button> 

        </div>
        <div class =" FlightsContainer">
            <h2 >Flights</h2>

        </div>

        <div class="ReserveContainer">
            <h2>Reserve</h2>
            <h4>Flight code: </h4>
            <h4>Airline: </h4>
            <h4>Day: </h4>
            <h4>Time: </h4>
            <h4>Cost: </h4>
            <h4>Name: </h4>
            <h4>Citizenship: </h4>

            <button type="submit" class="btn">Reserve</button>
        </div>

    </EditForm>
</div>


<style>

    .flex-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        width: 100%;
    }

    .input-group {
        margin-bottom: 10px;
        flex: 1; 
        display: flex;
    }

    .input-field, .btn {
        width: 100%; 
        padding: 8px;
        box-sizing: border-box;
    }

    .btn {
        flex: 1; 
        background-color: #007BFF;
        color: white;
        border: none;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #0056b3;
    }
    .FlightsContainer {
        align-content: center;
        padding-top: 8px;
    }

</style>

@code {
    private FlightSearchCriteria flightSearchCriteria = new FlightSearchCriteria();

    private void HandleValidSubmit()
    {
        // Logic to handle the submission when we make it hehe
    }

    private class FlightSearchCriteria
    {
        public string DepartureLocation { get; set; }
        public string Destination { get; set; }
        public string Day { get; set; }
    }
}
