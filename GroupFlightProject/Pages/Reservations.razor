    <div class="input-group">
        <label for="Airline">Airline:</label>
        <input class="input-field" @bind="airline" readonly />
    </div>

    <div class="input-group">
        <label for="Cost">Cost:</label>
        <input class="input-field" @bind="cost" readonly />
    </div>

    <div class="input-group">
        <label for="Name">Name:</label>
        <input class="input-field" @bind="passengerName" />
    </div>

    <div class="input-group">
        <label for="Citizenship">Citizenship:</label>
        <input class="input-field" @bind="citizenship" />
    </div>

    <div class="input-group">
        <label for="Status">Status:</label>
